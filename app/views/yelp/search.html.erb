<!DOCTYPE html>
<html>
	
  <head></head>
  
  <script>
  	@(docoment).ready(function() {
  		$("#search-form").validate({
  			debug:true,
  			rules: {
  				"search[place]": {required: true, place:true},
  				"search[location]": {required: true, location:true}
  			}
  		});
  	});
  </script>
  
  <body>
  	<!-- Rendering the navigation bar -->
  	<%= render partial: 'layouts/navbar' %>
  	<div class="container">
      <div class="page-title">
    	Search Page
      </div>
      <br>
      <div class="page-body">
        <%= form_tag("/yelp/result", method: "get", :id => "search-form") do %>
	      <%= label_tag(:place, "Find") %>
	      <%= text_field_tag(:place, 'Food', :onclick => 'if($(this).val()=="Food"){$(this).val("");};',  required: true) %>
	      <%= label_tag(:location, "Near") %>
	      <%= text_field_tag(:location, 'San Francisco', :onclick => 'if($(this).val()=="San Francisco"){$(this).val("");};',  required: true) %>
	      <%= submit_tag ("Search"), :class => "btn btn-default btn-sm", :id => "cool-button" %>
        <% end %> 	
      </div>
    </div>
  </body>
  <!-- Render the footer -->
  <%= render partial: 'layouts/footer' %>
</html>


